[Unit]
Description=DataChile Mondrian REST

[Service]
Type=simple
RemainAfterExit=yes
User=hermes
Environment=JRUBY_OPTS=--server 'JAVA_OPTS=-Dlog4j.configuration=file:log4j.properties -Dmondrian.rolap.aggregates.Use=true -Dmondrian.rolap.aggregates.Read=true'
PIDFile=/home/hermes/datachile-mondrian/datachile-mondrian.pid
WorkingDirectory=/home/hermes/datachile-mondrian
ExecStart=/home/hermes/.rvm/bin/datachile_bundle exec puma -b tcp://0.0.0.0:5000
TimeoutSec=300

[Install]
WantedBy=multi-user.target
